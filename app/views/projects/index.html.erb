<button type="button" class="btn btn-default" id="new-project" data-toggle="modal" data-target="#NewProjectModal">New Project</button>

<div>
 
  <!-- Modal -->
  <div class="modal fade" id="NewProjectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="NewProjectModalLabel">Add a New Project</h5>
        </div>
        <%= simple_form_for @project do |f| %>
          <div class="modal-body">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.submit 'Create', class: 'btn btn-default', id: 'new-project-submit' %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <br />
  <br />
  <% @projects.each do |project| %>
    <div class="row project">
      <h1 class="col-3"><%= project.name %></h1>
      <h3 class="col-3"><%= project.description %></h3>
      <div class="btn-group-lg">
        <a><%= link_to 'Add Record', new_project_record_path(project), class: "links" %></a>
        <a><%= link_to 'Summary', project_path(project), class: "links" %></a>
        <a><%= link_to 'Edit Project', edit_project_path(project), class: "links" %></a>
      </div>
    </div>
    <hr>
  <% end %>
  
</div>
 